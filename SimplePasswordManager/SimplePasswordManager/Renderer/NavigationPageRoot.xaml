<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimplePasswordManager.Renderer.NavigationPageRoot"
             xmlns:spm="clr-namespace:SimplePasswordManager">
    <ContentPage.Content>
        <StackLayout x:Name="c_Content">
            <Frame BackgroundColor="{x:Static spm:Theme.ACCENT_COLOR}" HorizontalOptions="FillAndExpand" Padding="10" HeightRequest="74">
                <StackLayout Orientation="Horizontal">
                    <Button HorizontalOptions="Start" VerticalOptions="Center" HeightRequest="64" WidthRequest="64" Text="&lt;" TextColor="{x:Static spm:Theme.ACCENT_TEXT_COLOR}" BackgroundColor="{x:Static spm:Theme.ACCENT_COLOR}" Clicked="Btn_BackClicked" FontSize="Title" />
                    <Label x:Name="c_TitleLabel" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Text="" TextColor="{x:Static spm:Theme.ACCENT_TEXT_COLOR}" FontSize="Title" FontAttributes="Bold" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>